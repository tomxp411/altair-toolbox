ERRLIN:	DS	2			;LINE NUMBER WHERE LAST ERROR OCCURED.
	PUBLIC	DOT
DOT:	DS	2			;KEEPS CURRENT LINE FOR EDIT & LIST
ERRTXT:	DS	2			;TEXT POINTER FOR USE BY "RESUME"
	PUBLIC	ONELIN
ONELIN:	DS	2			;THE LINE TO GOTO WHEN AN ERROR 
