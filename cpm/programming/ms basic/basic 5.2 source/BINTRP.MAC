	SUBTTL	TEXT CONSTANTS FOR PRINT OUT
;
; NEEDED FOR MESSAGES IN ALL VERSIONS
;
INTXT:	DC	' in '
	DB	0
REDDY:
	DB	10
	DC	'Ready'
	DB	13
	DB	10
	DB	0
BRKTXT:	DC	'Break'
